@using MinimalRazor.Models
@inherits RazorBlade.HtmlTemplate<List<Project>>
@{
	Layout = new Layout { User = Context.User };
}

<div class="container">
	<div class="card">
		<div class="card-header">
			<div class="d-flex align-items-center">
				<h5 class="mr-auto card-title d-none d-md-block">Projects</h5>
				<div class="ml-auto mb-0">
					<a class="btn btn-sm btn-outline-primary" href="/projects/edit/">New Project</a>
				</div>
			</div>
		</div>
		<div class="card-body p-0">
			<table class="table table-hover text-center">
				<thead>
					<tr>
						<th>Name</th>
						<th>User</th>
						<th>Date Created</th>
						<th>Date Updated</th>
						<th colspan="3">Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var m in Model)
					{
						<tr>
							<td>@m.Name</td>
							<td>@m.Detail</td>
							<td>@m.DateCreated</td>
							<td>@m.DateUpdated</td>
							<td></td>
						</tr>
					}
					@if (Model.Count == 0)
					{
						<tr><td colspan=10>No Data</td></tr>
					}
				</tbody>
			</table>
		</div>
		<div class="card-footer">
			Status
		</div>
	</div>
</div>

@functions {
	public HttpContext? Context { get; set; }
}